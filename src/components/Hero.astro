<section class="relative min-h-[450px] flex items-center justify-center overflow-hidden">
  <!-- Gradient Background Overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-purple-800 to-black opacity-80 z-10"></div>
  
  <!-- Background Image with Parallax -->
  <div 
    class="absolute inset-0 bg-cover bg-center bg-fixed z-0"
    style="background-image: url('/Jenny-Mod-Thumbnail.webp'); background-position: 50% 50%;"
  ></div>
  
  <!-- Content Container -->
  <div class="relative z-20 text-center px-4 py-20">
    <!-- Logo -->
    <div class="w-32 h-32 mx-auto mb-8">
      <img 
        src="/Jenny-Mod-Icon.webp" 
        alt="Jenny Mod Icon" 
        class="w-full h-full object-cover rounded-lg shadow-2xl"
      />
    </div>
    
    <!-- Title -->
    <h1 class="text-5xl md:text-7xl font-bold mb-6 text-white">
      Jenny Mod
    </h1>
    
    <!-- Description -->
    <p class="text-xl md:text-2xl mb-4 text-white max-w-3xl mx-auto">
      Welcome to the official website of Jenny Mod. Get a beautiful girlfriend in your Minecraft universe.
    </p>
    
    <!-- Version -->
    <div class="mb-8">
      <span class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-white via-blue-100 to-white bg-clip-text text-transparent drop-shadow-lg">
        v1.12.2
      </span>
    </div>
    
    <!-- Download Button -->
    <div class="flex justify-center">
      <a 
        href="#download" 
        class="inline-flex items-center gap-2 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-bold py-4 px-8 rounded-lg text-lg transition-all duration-200 shadow-lg hover:shadow-xl hover:scale-105"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        Download Now
      </a>
    </div>
  </div>
</section>